        td_dot: tap_dance {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            bindings = <&kp DOT &kp COLON>;   // . â†’ :
        };
    };



    combos {
        compatible = "zmk,combos";
        
        combo_backspace {
            timeout-ms = <50>;
            key-positions = <12 14>; //   S+F 
            bindings = <&kp BSPC>;
        };
        
        combo_delete {
            timeout-ms = <50>;
            key-positions = <13 14>; // D + F
            bindings = <&kp DEL>;
        };

        combo_word_del {
            timeout-ms = <80>;
            key-positions = <17 19>; // L then J
            bindings = <&mt LCTRL BSPC>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
               // Left pinky to index (top row)
               &td_q                &td_w                &td_e                &td_r               &td_t                         &td_y            &td_u               &td_i              &td_o                &td_p
               &ht LSHFT &td_a      &ht LALT &td_s       &ht LCTRL &td_d      &ht LGUI &td_f      &td_g                         &td_h            &ht RGUI &td_j      &ht RALT td_k      &ht RCTRL &td_l      &ht RSHFT &td_quote     
               &td_z                &td_x                &td_c                &td_v               &td_b                         &td_n            &td_m               &td_comma           &td_dot             &kp SLASH
                                                                              &ht TAB SPACE       &kp ENTER                     &kp SPACE        &kp ENTER
        >;
            >;
        };
